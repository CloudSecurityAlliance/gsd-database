            "workaround": {
                "workaround_data": {
                    "description": {
                        "description_data": [
                            {
                                "lang": "eng",
                                "value": "Using another PV network backend (e.g. the qemu based \"qnic\" backend)\nwill mitigate the problem.\n\nUsing a dedicated network driver domain per guest will mitigate the\nproblem."
                            }
                        ]
