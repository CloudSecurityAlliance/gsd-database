            "data_format": "MITRE",
            "data_type": "CVE",
            "data_version": "4.0",
            "description": {
                "description_data": [
                    {
                        "lang": "eng",
                        "value": "When receiving an OpenPGP/MIME signed email message that contains an\nadditional outer MIME message layer, for example a message footer added by a\nmailing list gateway, Thunderbird only considered the inner signed message for\nthe signature validity. This gave the false impression that the additional contents\nwere also covered by the digital signature. Starting with Thunderbird version 91.4.1,\nonly the signature that belongs to the top level MIME part will be considered for\nthe displayed status. This vulnerability affects Thunderbird < 91.4.1."
                    }
                ]
            },
            "problemtype": {
                "problemtype_data": [
                    {
                        "description": [
                            {
                                "lang": "eng",
                                "value": "OpenPGP signature status doesn't consider additional message content"
                            }
                        ]
                    }
                ]
            },
